    <!-- Title -->
    <div class="article-container">
        <span class="articleTitle">Wildfire Plumes Cause Poor Air Quality in Central New York</span></br>
        <span class="articleSubtitle"> Unpacking the local impacts of the worst wildfire season on record</span>
        <p class="author">By <a href="#" style="text-decoration: none">Julia Carden</a></p>
        <p class="date">Published:<a href="#" style="text-decoration: none">August 9, 2023</a></p>



    <!-- Share Icons -->
    <script type="text/javascript" src="https://platform-api.sharethis.com/js/sharethis.js#property=64d43b1cd0a1b80012faeb07&product=sticky-share-buttons&source=platform" async="async"></script> <div class="sharethis-sticky-share-buttons"></div>           



